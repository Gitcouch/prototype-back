<div class="container-add">
    <div class="formulario">
        <h2>Agregar novedad</h2>
        <br>
        <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="row">
                <div>
                    <input type="text" class="form-control" placeholder="Título" name="titulo" />
                </div>
            </div>
            <div class="row">
                <div>
                    <textarea class="form-control" placeholder="Subtítulo" name="subtitulo"></textarea>
                </div>
            </div>
            <div class="row">
                <div>
                    <textarea type-"text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
            </div>
            <div class="row">
                <div>
                    <label>Imagen: <input style="width: 32rem;" type="file" class="form-control" name="imagen"
                            id="imagen" /></label>
                </div>
            </div>
            <br>
            <div class="buttons-container">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-primary" onclick="window.location.href='/admin/novedades'">Volver
                    al listado</button>
            </div>
        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}
    </div>
</div>