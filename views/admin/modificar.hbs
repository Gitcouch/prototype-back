<div class='container' style='margin:100px auto'>
  <div class='row'>
    <div class='col-12'>
      <h4>Modificar la novedad</h4>
      <br />
      <form action='/admin/novedades/modificar' method='post' enctype='multipart/form-data'>
        <input type='hidden' value='{{novedad.id}}' name='id' />
        <div class='form-group'>
          <input
            placeholder='Título'
            class='form-control'
            type='text'
            value='{{novedad.titulo}}'
            name='titulo'
          />
        </div>
        <div class='form-group'>
          <textarea
            placeholder='Subtítulo'
            class='form-control'
            name='subtitulo'
          >{{novedad.subtitulo}}</textarea>
        </div>
        <div class='form-group'>
          <p>
            <label>Imagen:
              <input class='form-control' type='file' name='imagen' id='imagen' /></label>
          </p>
          <p>
            <label>
              <input type='checkbox' name='img_delete' id='img_delete' value='1' />Eliminar imagen
              actual?
            </label>
            <input type='hidden' name='img_original' value='{{novedad.img_id}}' />
          </p>
          <textarea
            placeholder='Cuerpo'
            class='form-control'
            name='cuerpo'
          >{{novedad.cuerpo}}</textarea>
        </div>
        <br />
        <button type='submit' class='btn btn-primary'>Modificar</button>
        <button
          type='button'
          class='btn btn-primary'
          onclick="window.location.href='/admin/novedades'"
        >Volver al listado</button>
      </form>
      {{#if error}}
        <h5>{{message}}</h5>
      {{/if}}
    </div>
  </div>
</div>